<?xml version="1.0" encoding="UTF-8"?>
<!-- mybatis를 사용할 수 있도록 태그코드 추가 -->
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.supermm.mapper.CategoryMapper">

<insert id="input">
        <selectKey keyProperty="cNum" resultType="string" order="BEFORE">  
            select categorySeq.Nextval from dual 
        </selectKey>
        insert into Category(cNum, cCode, cName)
        values(#{cNum},#{cCode},#{cName})
</insert>
</mapper>
